{
  "name": "e_commerce_platform",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node --max-old-space-size=5120 src/index.ts",
    "dev": "ts-node-dev --transpile-only --no-notify --max-old-space-size=5120 src",
    "build": "npx tsc",
    "server": "node dist/index.js",
    "db:generate": "drizzle-kit generate --name init_db",
